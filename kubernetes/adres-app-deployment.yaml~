apiVersion: apps/v1
kind: Deployment
metadata:
  name: adres-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: adres-app
  template:
    metadata:
      labels:
        app: adres-app
    spec:
      containers:
        - name: adres-app
          image: dockerpinguin/adres:latest
          ports:
            - containerPort: 8080
            - containerPort: 8081
          env:
            - name: SPRING_DATASOURCE_URL
              value: jdbc:postgresql://postgres/adres
            - name: SPRING_DATASOURCE_USERNAME
              value: testuser
            - name: SPRING_DATASOURCE_PASSWORD
              value: "12345"
            - name: SPRING_PROFILES_ACTIVE
              value: runtime
            - name: activeProfile
              value: runtime
          livenessProbe:
            httpGet:
              path: /actuator/app-health
              port: 8081
            initialDelaySeconds: 10
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
#          command: ["java", "-jar", "/app/libs/adres-0.0.19.jar"]